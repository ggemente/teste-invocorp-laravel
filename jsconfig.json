{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve"
    },
    "include": [
        "resources/js/**/*.js",
        "resources/js/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "public",
        "storage",
        "vendor"
    ]
}